# ===========================================
# MintStack Finance Portal - Environment Variables Template
# ===========================================
# Copy this file to .env and replace the placeholder values with your actual secrets
# DO NOT commit .env file to version control!
# ===========================================

# PostgreSQL
POSTGRES_DB=mintstack_finance
POSTGRES_USER=mintstack
POSTGRES_PASSWORD=<CHANGE_ME_POSTGRES_PASSWORD>

# Redis
REDIS_PASSWORD=<CHANGE_ME_REDIS_PASSWORD>

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=<CHANGE_ME_KEYCLOAK_ADMIN_PASSWORD>
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://postgres:5432/keycloak
KC_DB_USERNAME=mintstack
KC_DB_PASSWORD=<CHANGE_ME_POSTGRES_PASSWORD>

# OpenLDAP
LDAP_ORGANISATION=MintStack
LDAP_DOMAIN=mintstack.local
LDAP_ADMIN_PASSWORD=<CHANGE_ME_LDAP_ADMIN_PASSWORD>

# Kafka
KAFKA_BROKER_ID=1

# OpenSearch
OPENSEARCH_INITIAL_ADMIN_PASSWORD=<CHANGE_ME_OPENSEARCH_PASSWORD>

# Backend
SPRING_PROFILES_ACTIVE=prod
JWT_ISSUER_URI=http://keycloak:8180/realms/mintstack-finance

# Frontend
REACT_APP_API_URL=http://localhost:8080/api/v1
REACT_APP_KEYCLOAK_URL=http://localhost:8180
REACT_APP_KEYCLOAK_REALM=mintstack-finance
REACT_APP_KEYCLOAK_CLIENT_ID=finance-frontend

# Alpha Vantage API
ALPHA_VANTAGE_API_KEY=<YOUR_ALPHA_VANTAGE_API_KEY>

# ===========================================
# PRODUCTION DEPLOYMENT NOTES:
# ===========================================
# 1. Generate strong passwords using: openssl rand -base64 32
# 2. Store secrets in a secure secrets manager (HashiCorp Vault, AWS Secrets Manager)
# 3. For Docker Swarm, use Docker Secrets instead of environment variables
# 4. Never expose these values in logs or error messages
# 5. Rotate passwords periodically
# ===========================================
